{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,

    "target": "ES2015",
    "module": "ES2015",
    "lib": ["ESNext", "DOM"],
    "outDir": "./build",
    "baseUrl": ".",

    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "declaration": true,

    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/index.ts"],
}